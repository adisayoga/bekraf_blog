<%- include ../includes/header.ejs %>

<div class="container">
  <section class="post">
    <div class="post-header">
      <div class="post-title"><%= item.title %></div>
      <div class="post-date"><%= item.created_at.format('dddd, Mo MMMM Y HH:mm') %></div>
    </div>

    <div class="post-body">
      <%= item.body %>
    </div>
  </section>
</div>
